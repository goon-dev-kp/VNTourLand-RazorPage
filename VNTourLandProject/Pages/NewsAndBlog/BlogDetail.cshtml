<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Our Blog</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Blog</a></li>
                <li class="breadcrumb-item active text-white">Blog Detail</li>
            </ol>
    </div>
</div>
<!-- Header End -->


<!-- Blog Content -->
<div class="container py-5">
    <div class="row g-5">
        <!-- LEFT CONTENT -->
        <div class="col-lg-8">
            @if (Model.BlogDetail != null)
            {
                <img src="@Model.BlogDetail.ImageUrl"
                     class="img-fluid w-100 rounded mb-4 shadow-sm"
                     style="max-height: 450px; object-fit: cover;"
                     alt="Blog Image" />

                <h2 class="fw-bold mb-3">@Model.BlogDetail.Title</h2>

                <p class="text-muted mb-3">
                    <i class="fa fa-calendar-alt text-primary me-2"></i>
                    @Model.BlogDetail.CreatedDate.ToString("dd MMM yyyy")
                    &nbsp;&nbsp;|&nbsp;&nbsp;
                    <i class="fa fa-user text-primary me-2"></i>By Admin
                </p>

                <div class="blog-content fs-5">
                    @Html.Raw(Model.BlogDetail.Content)
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Blog not found or has been removed.
                </div>
            }


            <div class="container py-5">
                <!-- Tiêu đề -->
                <div class="mb-4">
                    <h4 class="fw-bold text-primary">💬 Customer Reviews & Comments</h4>
                </div>

                <!-- Danh sách bình luận -->
                <div class="mb-5">
                    @if (Model.BlogReviews != null && Model.BlogReviews.Any())
                    {
                        foreach (var review in Model.BlogReviews)
                        {
                            <div class="border-bottom pb-4 mb-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="~/img/user-default.jpg" class="rounded-circle me-3" width="50" height="50" alt="Avatar" />
                                        <div>
                                            <strong>@review.Name</strong><br />
                                            <small class="text-muted">Rate this article</small>
                                        </div>
                                    </div>
                                    <div class="text-warning small">
                                        @for (int star = 0; star < 5; star++)
                                        {
                                            <i class="fas fa-star @(star < review.Rating ? "text-warning" : "text-secondary")"></i>
                                        }
                                    </div>
                                </div>
                                <div class="mt-3 ps-5">
                                    <p class="mb-0 text-dark">
                                        @review.Comment
                                    </p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No comments yet. Be the first to comment!</p>
                    }
                </div>


                @if (Model.IsAuth)
                {
                    <div class="border p-4 rounded shadow-sm bg-light">
                        <h5 class="fw-bold mb-3">📝 Send your comment</h5>
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" placeholder="Họ tên" value="@User.Identity.Name" readonly />
                                </div>
                                <div class="col-md-6">
                                    <select class="form-select" asp-for="NewReview.Rating" required>
                                        <option disabled selected>Choose your rating</option>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <option value="@i">@($"{new string('⭐', i)} ({i} sao)")</option>
                                        }

                                    </select>
                                </div>
                                <div class="col-12">
                                    <textarea asp-for="NewReview.Comment" rows="4" class="form-control" placeholder="Write a comment..." required></textarea>
                                </div>
                                <div class="col-12 text-end">
                                    <button type="submit" class="btn btn-primary rounded-pill px-4">Send your comment</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-4 text-center" role="alert">
                        Please <a href="/Login" class="fw-bold text-primary text-decoration-underline">Login</a> to comment and rate this article.
                    </div>
                }

            </div>

           
        </div>

        <!-- RIGHT: SIDEBAR -->
        <div class="col-lg-4">
            <h5 class="mb-3 fw-bold">Latest Posts</h5>
            @foreach (var item in Model.Top3LatestPosts)
            {
                <div class="d-flex align-items-center mb-3">
                    <img src="@item.ImageUrl" class="rounded shadow-sm me-3"
                         style="width: 80px; height: 80px; object-fit: cover;" />
                    <div>
                        <a asp-page="/NewsAndBlog/BlogDetail" asp-route-BlogId="@item.BlogId"
                           class="text-dark fw-semibold d-block mb-1">
                            @item.Title
                        </a>
                        <small class="text-muted">
                            <i class="fa fa-calendar-alt me-1"></i>
                            @item.CreatedDate.ToString("dd MMM yyyy")
                        </small>
                    </div>
                </div>
            }

            <h5 class="mt-4 mb-3 fw-bold">Categories</h5>
            <ul class="list-group list-group-flush">
                @foreach (var cat in Model.Categories)
                {
                    <li class="list-group-item px-0">
                        <a href="#" class="text-dark">
                            <i class="fa fa-angle-right me-2 text-primary"></i>
                            @cat.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>


