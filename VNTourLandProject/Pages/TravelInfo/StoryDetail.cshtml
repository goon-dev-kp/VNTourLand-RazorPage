<style>
    .story-hero {
        background: url('/img/story-hero.jpg') no-repeat center center/cover;
        height: 70vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
    }

        .story-hero::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

    .story-hero-content {
        position: relative;
        z-index: 1;
    }

    .story-section {
        padding: 60px 20px;
    }

        .story-section img {
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .btn-create-request {
        font-size: 1.15rem;
        padding: 14px 36px;
        border-radius: 50px;
        font-weight: 600;
        color: #fff;
        background: linear-gradient(90deg, #00b4db 0%, #0083b0 100%);
        border: none;
        box-shadow: 0 8px 16px rgba(0, 132, 170, 0.3);
        transition: all 0.3s ease;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.25);
    }

        .btn-create-request:hover {
            background: linear-gradient(90deg, #0083b0 0%, #00b4db 100%);
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 12px 20px rgba(0, 132, 170, 0.4);
        }

    .iti {
        width: 100%;
    }

        .iti input {
            height: calc(1.5em + .75rem + 2px); /* Giống Bootstrap input */
            padding: .375rem .75rem;
            font-size: 1rem;
            line-height: 1.5;
            border: 1px solid #ced4da;
            border-radius: .375rem;
        }


    .breadcrumb-item.active > a {
        color: white !important;
        opacity: 1 !important;
        text-decoration: none;
    }

</style>
