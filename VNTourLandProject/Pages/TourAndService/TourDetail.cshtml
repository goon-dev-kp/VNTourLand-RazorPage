    <!-- Main Content -->
    <div class="row gy-5">
        <!-- LEFT: Tour Info -->
        <div class="col-lg-7 pe-lg-5">
            <div class="mb-4">
                <div class="p-4 rounded-4 shadow-lg bg-white border border-light d-flex justify-content-center">
                    <img src="@Model.TourDetail.ImageUrl"
                         alt="Tour Image"
                         class="rounded-4 shadow-sm"
                         style="max-height: 400px; max-width: 100%; object-fit: cover;" />
                </div>
            </div>

            <!-- Tour Info -->
            <div class="mb-4 text-center text-md-start">
                <h2 class="fw-bold text-primary mb-3">@Model.TourDetail.TourName</h2>

                @if (Model.TourDetail?.Location != null && Model.TourDetail.Location.Any())
                {
                    <div class="mb-2">
                        <i class="fa fa-map-marker-alt me-2 text-primary"></i>
                        <strong class="text-dark d-block mb-1">Tour Locations:</strong>
                        <ul class="mb-0 ps-4">
                            @foreach (var loc in Model.TourDetail.Location)
                            {
                                <li>@(loc?.LocationName ?? "Không có tên")</li> <!-- ✅ Có null check -->
                            }
                        </ul>
                    </div>
                }






                <p class="mb-2">
                    <i class="fa fa-calendar-alt me-2 text-primary"></i>
                    @Model.TourDetail.StartDate.ToString("dd/MM/yyyy") - @Model.TourDetail.EndDate.ToString("dd/MM/yyyy")
                </p>
                <p class="mb-2">
                    <i class="fa fa-money-bill-wave me-2 text-primary"></i>
                    <strong class="text-dark">Price of adult:</strong> @string.Format("$ {0:N0}", Model.TourDetail.PriceOfAdult) <br />
                    <i class="fa fa-money-bill-wave me-2 text-primary"></i>
                    <strong class="text-dark">Price of child:</strong> @string.Format("$ {0:N0}", Model.TourDetail.PriceOfChild)
                </p>
                <p class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>
                    @Model.TourDetail.TourDescription
                </p>
                <!-- Hiển thị thêm customer add-on fee nếu có -->
                @if (!string.IsNullOrEmpty(Model.TourDetail.CustomAddOnNote) && Model.TourDetail.CustomAddOnFee > 0)
                {
                    <p class="mb-2">
                        <i class="fa fa-plus-circle me-2 text-primary"></i>
                        <strong class="text-dark">Customer Add-on Fee:</strong> @string.Format("$ {0:N0}", Model.TourDetail.CustomAddOnFee)
                    </p>
                }


            </div>

            <!-- Included -->
            <h4 class="fw-semibold text-dark mb-3">What's Included</h4>
            <ul class="list-unstyled ps-3">
                @foreach (var item in Model.IncludedItems)
                {
                    <li class="mb-2"><i class="fa fa-check text-success me-2"></i>@item.Description</li>
                }
            </ul>

            <!-- Not Included -->
            @if (Model.NotIncludedItems.Any())
            {
                <h4 class="fw-semibold text-dark mt-4 mb-3">What's Not Included</h4>
                <ul class="list-unstyled text-muted ps-3">
                    @foreach (var item in Model.NotIncludedItems)
                    {
                        <li class="mb-2"><i class="fa fa-times text-danger me-2"></i>@item.Description</li>
                    }
                </ul>
            }

            <!-- Itinerary -->
            <h4 class="fw-semibold text-dark mt-4 mb-3">Itinerary</h4>
            <div class="accordion" id="itineraryAccordion">
                @for (int i = 0; i < Model.Itineraries.Count; i++)
                {
                    var itin = Model.Itineraries[i];
                    var headingId = $"heading{i}";
                    var collapseId = $"collapse{i}";
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="@headingId">
                            <button class="accordion-button @(i > 0 ? "collapsed" : "")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="@collapseId">
                                @itin.Name 
                            </button>
                        </h2>
                        <div id="@collapseId" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#itineraryAccordion">
                            <div class="accordion-body">
                                <ul class="list-unstyled">
                                    @foreach (var act in itin.Activities)
                                    {
                                        <li class="mb-2">
                                            <strong>
                                                @act.StartTime.ToString("HH:mm") - @act.EndTime.ToString("HH:mm")
                                            </strong>: @act.Description
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @* MAP *@

            <div class="my-4">
                <h4 class="fw-bold text-primary mb-3">
                    <i class="fa fa-map-marker-alt me-2"></i> Tour Locations
                </h4>
                <div id="tourMap" style="height: 500px; width: 100%; border-radius: 8px;"></div>
            </div>
        </div>


        <!-- RIGHT: Booking Form -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm p-4">
                <h4 class="fw-bold mb-4 text-primary">Book This Tour</h4>

                @if (Model.isAuth)
                {
                    <form method="post">
                        <input type="hidden" name="createBookingDTO.TourId" value="@Model.TourDetail.TourId" />

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" name="createBookingDTO.FullName" class="form-control" required />
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="createBookingDTO.Email" class="form-control" required />
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" name="createBookingDTO.PhoneNumber" class="form-control" required />
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <label class="form-label">Address</label>
