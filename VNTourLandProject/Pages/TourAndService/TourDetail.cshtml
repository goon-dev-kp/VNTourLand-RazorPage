                        </div>

                        <!-- Number of Adults -->
                        <div class="mb-3">
                            <label class="form-label">Adults</label>
                            <input type="number" name="createBookingDTO.NumberOfAdults" id="adults" class="form-control" min="1" value="1" required />
                        </div>

                        <!-- Number of Children -->
                        <div class="mb-3">
                            <label class="form-label">Children</label>
                            <input type="number" name="createBookingDTO.NumberOfChildren" id="children" class="form-control" min="0" value="0" />
                        </div>

                        @* <!-- Add-on Options --> *@
                        @* <div class="mb-3"> *@
                        @*     <label class="form-label">Add-on Options</label> *@
                        @*     @foreach (var option in Model.AddOptions) *@
                        @*     { *@
                        @*         <div class="form-check mb-1"> *@
                        @*             <input class="form-check-input addon-checkbox" type="checkbox" name="SelectedAddOns" value="@option.AddOnOptionId" data-price="@option.Price" /> *@
                        @*             <label class="form-check-label"> *@
                        @*                 @option.Name - @string.Format("$ {0:N0}", option.Price) *@
                        @*             </label> *@
                        @*         </div> *@
                        @*     } *@
                        @* </div> *@

                        <!-- Special Request -->
                        <div class="mb-3">
                            <label class="form-label">Special Request</label>
                            <textarea name="createBookingDTO.Note" class="form-control" rows="3"></textarea>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary w-100 py-2" id="bookNowBtn">
                            Book Now - @string.Format("$ {0:N0}", Model.TourDetail.PriceOfAdult)
                        </button>
                    </form>

                    
