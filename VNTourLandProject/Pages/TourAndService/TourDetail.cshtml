                    </div>
                    <div class="col-md-6">
                        <select name="createReviewerDTO.Rating" class="form-select" required>
                            <option disabled selected>Select Rating</option>
                            <option value="1">⭐ 1 star</option>
                            <option value="2">⭐⭐ 2 stars</option>
                            <option value="3">⭐⭐⭐ 3 stars</option>
                            <option value="4">⭐⭐⭐⭐ 4 stars</option>
                            <option value="5">⭐⭐⭐⭐⭐ 5 stars</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <textarea name="createReviewerDTO.Comment" rows="4" class="form-control" placeholder="Write your comment..." required></textarea>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Submit Review</button>
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4 text-center" role="alert">
            Please <a href="/Auth/Login" class="fw-bold text-primary text-decoration-underline">log in</a> to post a review and rating.
        </div>
    }
