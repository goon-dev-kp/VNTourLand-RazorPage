        const loadMoreBtn = document.getElementById("loadMoreBtn");
        if (!loadMoreBtn) return;

        loadMoreBtn.addEventListener("click", function () {
            // Lấy tất cả review-item đang ẩn (display:none)
            const hiddenReviews = document.querySelectorAll("#review-list .review-item[style*='display:none']");
            if (hiddenReviews.length === 0) {
                // Không còn review nào ẩn => ẩn nút load more
                loadMoreBtn.style.display = "none";
                return;
            }

            // Mỗi lần bấm hiện thêm 3 review (hoặc ít hơn nếu không đủ)
            for (let i = 0; i < 3 && i < hiddenReviews.length; i++) {
                hiddenReviews[i].style.display = "block";
            }

            // Nếu hết review ẩn thì ẩn nút load more
            if (document.querySelectorAll("#review-list .review-item[style*='display:none']").length === 0) {
                loadMoreBtn.style.display = "none";
            }
        });
    });
</script>

