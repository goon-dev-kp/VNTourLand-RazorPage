<div class="container py-5">
    <!-- Title -->
    <div class="mb-4">
        <h4 class="fw-bold text-primary">💬 Customer Reviews & Comments</h4>
    </div>

    <div class="mb-5">
        @if (Model.ReviewerList != null && Model.ReviewerList.Any())
        {
            <div id="review-list">
                @for (int i = 0; i < Model.ReviewerList.Count; i++)
                {
                    var review = Model.ReviewerList[i];
                    var initial = !string.IsNullOrEmpty(review.Name) ? review.Name.Substring(0, 1).ToUpper() : "?";
                    <div class="border-bottom pb-4 mb-4 review-item" style="@(i >= 3 ? "display:none;" : "")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="initial-avatar rounded-circle me-3 d-flex align-items-center justify-content-center">
                                    @initial
                                </div>
                                <div>
                                    <strong>@(string.IsNullOrEmpty(review.Name) ? "Anonymous" : review.Name)</strong><br />
                                    <small class="text-muted">
                                        Reviewed on: @review.DateTime.ToLocalTime().ToString("dd MMM yyyy")
                                    </small>
                                </div>
                            </div>
                            <div class="text-warning small">
                                @for (int star = 0; star < 5; star++)
                                {
                                    if (star < (review.Rating ?? 0))
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-star text-secondary"></i>
                                    }
                                }
                            </div>
                        </div>
                        <div class="mt-3 ps-5">
                            <p class="mb-0 text-dark">
                                @(!string.IsNullOrEmpty(review.Comment) ? review.Comment : "<i>No comment provided.</i>")
                            </p>
                        </div>
                    </div>
                }
            </div>

            @if (Model.ReviewerList.Count > 3)
            {
                <div class="text-center">
                    <button id="loadMoreBtn" class="btn btn-outline-primary rounded-pill px-4">Load More Reviews</button>
                </div>
            }
        }
        else
        {
            <p class="text-muted fst-italic">No reviews yet. Be the first to leave a review!</p>
        }
    </div>




    @if (Model.isAuth)
    {
        <div class="border p-4 rounded shadow-sm bg-light">
            <h5 class="fw-bold mb-3">📝 Submit Your Review</h5>
            <form method="post" asp-page-handler="SubmitReview">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="hidden" name="CreateReviewerDTO.TourId" value="@Model.TourId" />

