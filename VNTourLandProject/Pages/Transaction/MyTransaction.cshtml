<!-- Transaction Table -->
<div class="container py-5">
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered align-middle table-hover">
            <thead class="table-success text-center align-middle">
                <tr>
                    <th>#</th>
                    <th>Tên Tour</th>
                    <th>Ngày Booking</th>
                    <th>Số tiền</th>
                    <th>Trạng thái</th>
                    <th>Ngày chuyển khoản</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 4; i++)
                {
                    var status = i switch
                    {
                        1 => "Đã chuyển khoản",
                        2 => "Đang xác nhận",
                        3 => "Hoàn tất",
                        _ => "Chờ thanh toán"
                    };
                    var badge = status switch
                    {
                        "Đã chuyển khoản" => "bg-warning text-dark",
                        "Đang xác nhận" => "bg-info text-white",
                        "Hoàn tất" => "bg-success",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td class="text-center">@i</td>
                        <td>Tour du lịch Đà Lạt @((i + 2) * 2)N@(i + 1)Đ</td>
                        <td>2024-07-@((10 + i).ToString("D2"))</td>
                        <td>@((i + 2) * 1_000_000):n0 đ</td>
                        <td class="text-center">
                            <span class="badge @badge">@status</span>
                        </td>
                        <td>2024-07-@((15 + i).ToString("D2"))</td>
                        <td>Chuyển khoản qua Vietcombank</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
