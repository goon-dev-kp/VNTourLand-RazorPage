    <script>
        const accessToken = '@Model.MapboxToken'; // hoặc hard-code test

        // Lấy tọa độ khi blur location input
        document.addEventListener('blur', async function (e) {
            if (e.target.classList.contains('locationInput')) {
                const location = e.target.value;
                if (!location) return;

                const response = await fetch(`https://api.mapbox.com/geocoding/v5/mapbox.places/${encodeURIComponent(location)}.json?access_token=${accessToken}`);
                const data = await response.json();

                if (data.features?.length > 0) {
                    const center = data.features[0].center;
                    const group = e.target.closest('.location-group');
                    group.querySelector('.latitudeInput').value = center[1];
                    group.querySelector('.longitudeInput').value = center[0];
                }
            }
        }, true);

        // Thêm ô nhập địa điểm mới
        function addLocation() {
            const container = document.getElementById('locationsContainer');
            const newGroup = document.createElement('div');
            newGroup.className = 'location-group mb-3';
            newGroup.innerHTML = `
                <input type="text" class="form-control locationInput mb-1" placeholder="e.g., Ha Long Bay" required />
                <input type="hidden" class="latitudeInput" />
                <input type="hidden" class="longitudeInput" />
            `;
            container.appendChild(newGroup);
        }

        // Gán name động cho các inputs trước khi submit
        document.querySelector('form').addEventListener('submit', function () {
            const groups = document.querySelectorAll('.location-group');
            groups.forEach((group, index) => {
                group.querySelector('.locationInput').setAttribute('name', `EditTour.Locations[${index}].LocationName`);
                group.querySelector('.latitudeInput').setAttribute('name', `EditTour.Locations[${index}].Latitude`);
                group.querySelector('.longitudeInput').setAttribute('name', `EditTour.Locations[${index}].Longitude`);
            });
        });
    </script>

