    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Hiển thị thông báo thành công
        @if (TempData["Message"] != null)
        {
            <text>
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: '@TempData["Message"]'
                            });
            </text>
