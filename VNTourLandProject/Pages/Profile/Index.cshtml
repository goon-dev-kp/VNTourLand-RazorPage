}

<!-- Giữ Navbar ở _Layout.cshtml hoặc trên page -->
<div class="profile-container" style="display: flex; justify-content: center; padding: 50px 0; background-color: #f9fafb;">
    <div class="profile-card" style="position: relative; background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); max-width: 400px; width: 100%; text-align: center; overflow: hidden;">

        <!-- Decorative Background Image -->
        <div style="position: absolute; top: -30px; right: -30px; width: 120px; height: 120px; background: url('https://cdn.pixabay.com/photo/2017/01/31/13/14/mountain-landscape-2029664_1280.png') no-repeat center center / cover; opacity: 0.2; transform: rotate(20deg); z-index: 0;"></div>

