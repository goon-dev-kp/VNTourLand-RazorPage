    Layout = "_Layout";
    ViewData["Title"] = "Profile";
}

<style>
    .breadcrumb-item.active > a {
        color: white !important;
        opacity: 1 !important;
        text-decoration: none;
    }


    /* Container chính */
    .profile-container {
        background-color: #f9fafb; /* tương tự bg-gray-50 */
        min-height: 100vh;
        padding-top: 6rem;
        padding-bottom: 3rem;
        display: flex;
        justify-content: center;
        position: relative;
    }

    /* Card trắng chính */
    .profile-card {
        background-color: #fff;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        border-radius: 1rem;
        padding: 2rem;
        width: 100%;
        max-width: 400px;
        position: relative;
        z-index: 10;
    }

    /* Decorative blobs */
    .blob1, .blob2 {
        position: absolute;
        border-radius: 50%;
        filter: blur(24px);
        pointer-events: none;
    }

    .blob1 {
        top: -40px;
        left: -40px;
        width: 160px;
        height: 160px;
        background-color: #c7d2fe; /* indigo-100 */
        opacity: 0.3;
    }

    .blob2 {
        bottom: -40px;
        right: -32px;
        width: 128px;
        height: 128px;
        background-color: #ddd6fe; /* purple-100 */
        opacity: 0.2;
    }

    /* Avatar */
    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #6366f1; /* indigo-500 */
        color: white;
        font-size: 2rem;
        font-weight: 700;
        box-shadow: 0 4px 10px rgba(99, 102, 241, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    /* Text center */
    .text-center {
        text-align: center;
    }

    /* User info */
    .username {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1f2937; /* gray-800 */
        margin-top: 1.5rem;
    }

    .member-badge {
        display: inline-block;
        margin-top: 0.5rem;
        padding: 0.2rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: #4338ca; /* indigo-700 */
        background-color: #e0e7ff; /* indigo-100 */
        border-radius: 9999px;
    }

    .user-detail {
        font-size: 0.875rem;
        color: #6b7280; /* gray-500 */
        margin-top: 0.25rem;
    }

    /* Form inputs */
    form input {
        width: 100%;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid #d1d5db; /* gray-300 */
        font-size: 1rem;
        box-sizing: border-box;
    }

        form input:focus {
            outline: none;
            border-color: #6366f1; /* indigo-500 */
            box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.5);
        }

    /* Buttons */
    .btn-indigo {
        background-color: #6366f1;
        color: white;
        border-radius: 9999px;
        padding: 0.5rem 1.5rem;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.3s;
    }

        .btn-indigo:hover {
            background-color: #4f46e5;
        }

    .btn-gray {
        background-color: #e5e7eb; /* gray-200 */
        color: #374151; /* gray-700 */
        border-radius: 9999px;
        padding: 0.5rem 1.5rem;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.3s;
    }

        .btn-gray:hover {
            background-color: #d1d5db;
        }

    /* Footer */
    .profile-footer {
        margin-top: 1.5rem;
        border-top: 1px solid #e5e7eb; /* gray-200 */
        padding-top: 1rem;
        text-align: center;
        font-size: 0.75rem;
        color: #9ca3af; /* gray-400 */
    }

    /* Action buttons container */
    .action-buttons {
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    /* Hide form by default */
    #profileEditForm {
        display: none;
    }


</style>


