            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["Error"] != null)
        {
            <text>
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: '@TempData["Error"]'
                                });
            </text>
        }
        });
    </script>
